
{{ define "record_fragment" }}
<tr>
    <td>{{.Type}}</td>
    <td>{{.FQDN}}</td>
    <td>directs to {{.IP}}</td>
    <td>{{.TTL}}</td>
    <td>
    <button
      class="btn-delete"
      hx-delete="/records?Type={{.Type}}&FQDN={{.FQDN}}&IP={{.IP}}&TTL={{.TTL}}"
      hx-confirm="Are you sure you want to delete this record?"
      hx-target="closest tr"
      hx-swap="outerHTML swap:1s">
      Delete
    </button>
    </td>
</tr>
{{ end }}
